@page "/users"
@inject HttpClient Http
@using HomeChat.Core.DataModels

<h1>Users</h1>

@if (users == null)
{
    <p><em>Loading...</em></p>
}
else
{
    <table class="table">
        <thead>
            <tr>
                <th>ID</th>
                <th>NAME</th>
                <th>IP</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var user in users)
            {
                <tr>
                    <td>@user.Id</td>
                    <td>@user.Name</td>
                    <td>@user.IP</td>
                </tr>
            }
        </tbody>
    </table>
}

@code {
    private List<UserModel> users;
    private string s = "";

    protected override async Task OnInitializedAsync()
    {
        try
        {
            users = await Http.GetFromJsonAsync<List<UserModel>>("user/list");
        }
        catch (Exception ex)
        {
            s = ex.Message;
        }
    }
}
